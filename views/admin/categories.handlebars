<div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded shadow-sm">
  {{#if category}}
  <form action="/admin/categories/{{category.id}}?_method=PUT" method="POST"
    class="d-flex justify-content-between align-items-end">
    <label for="name" style="color: rgb(40, 40, 40); margin-right: 5px; width: 120px;">編輯類別 </label>
    <input type="text" placeholder="name" name="name" value="{{category.name}}" class="form form-control mr-2"
      maxlength="20">
    <button type="submit" class="btn btn-primary mr-2">Update</button>
    <a href="/admin/categories" style="width: 200px;">or Create New</a>
  </form>
  {{else}}""
  <form action="/admin/categories" method="POST" class="d-flex justify-content-between  align-items-end">
    <label for="name" style="color: rgb(40, 40, 40); margin-right: 5px; width: 120px;">新增類別 </label>
    <input type="text" placeholder="name" name="name" class="form form-control mr-2" maxlength="20">
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  {{/if}}

</div>
<br />
<br />
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category Name</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>
        <button type="button" class="btn btn-link">
          <a href="/admin/categories/{{this.id}}">
            Edit
          </a>
        </button>
        <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
